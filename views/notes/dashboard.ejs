
<% include ../partials/head %>
<div class="col-sm-6 mx-auto">
<div class="card">
<h2 class="card-header"><%=user.name%>'s Notes <a href="/notes/add-note"><span class="fas fa-plus-square" style="font-size: 1em;"></span></a></h2>
</div>
</div><br><br>
<div class="container pt-4 pb-4">
    <div class="row">
<%if(notes.length!=0) 
for(var i=0; i<notes.length; i++) { %>
    <div class="col-lg-3 col-md-4 col-sm-6 col-6 text-center">
        <div class="card p-4 text-center mx-auto">
            <h2 class="title"><%=notes[i].title.slice(0,30)%>...</h6>
            <a href="/notes/view-note/<%= notes[i]._id%>" class="card-link">See more...</a>

          </div>
    </div>
    
<%} else {%>
  <div class="card-body">
    <h3 class="card-title">No Notes Listed</h3>
     <a href="/notes/add-note" class="btn btn-primary" title="add">Add a Note</a><br>
  </div> 
<%}%>
    </div></div>
<% include ../partials/footer %>
