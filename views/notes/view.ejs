<% include ../partials/head %>
<div class="col-sm-6 mx-auto">
    <div class="card">
    <div class="card-header">
    <h2><%=notes.title%></h2>
   </div>
      <div class="card-body">
        <h5 class="card-title"><%=notes.text%></h5>
        <a href="/notes/edit-note/<%= notes._id %>" class="btn btn-primary" title="Edit"><span class="fas fa-edit" style="font-size: 1em;"></span> Edit</a>
        <a href="/notes/delete-note/<%= notes._id %>" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger" title="Delete"><span class="fas fa-trash" style="font-size: 1em;"></span> Delete</a>
        <a href="#collapseExample" aria-expanded="false" aria-controls="collapseExample" class="btn btn-success" data-toggle="collapse" title="share"><span class="fas fa-paper-plane" style="font-size: 1em;"></span> Share</a>
        <a href="/notes" class="btn btn-secondary" title="Return"><span class="fas fa-history" style="font-size: 1em;"></span> Return</a><br><br>
        <div class="collapse" id="collapseExample">
  <form class="form-inline my-2 my-lg-0" action="/notes/share-note/<%= notes._id %>" method="post">
      <input class="form-control mr-sm-2" type="text" placeholder="Enter Email of recipient" name="email" required autofocus>
      <button class="btn btn-primary" type="submit">Submit</button>
    </form>
</div>
    <div class="card-footer text-muted">
    Last Updated: <%=notes.date%>
    </div>
</div>
</div>
<% include ../partials/footer %>



