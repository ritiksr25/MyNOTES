<% include ../partials/head %>
<div class="col-sm-6 mx-auto">
    <div class="card">
    <div class="card-header">
    <h2><%=notes.title%></h2>
   </div>
      <div class="card-body">
        <h5 class="card-title"><%=notes.text%></h5>
        <a href="/notes/edit-note/<%= notes._id %>" class="btn btn-primary" title="Edit">Edit</a>
        <a href="/notes/delete-note/<%= notes._id %>" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger" title="Delete">Delete</a>
        <a href="/notes" class="btn btn-secondary" title="Return">Return</a>
    <div class="card-footer text-muted">
    Last Updated: <%=notes.date.toDateString()%>
    </div>
</div>
</div>
<% include ../partials/footer %>



