<% include ../partials/head %>
<div class="col-sm-6 mx-auto">
<div class="card">
<h2 class="card-header">Add a Note </h2>
  <div class="card-body">
    <h3 class="card-title">
  <form class="form" action="/notes/add-note" method="post">   
  <label for="title">Title: </label>
  <input type="text" name="title" class="form-control" placeholder="Note Title" required autofocus><br>
  <label for="text">Details: </label>
  <textarea name="text" class="form-control" placeholder="Description..." rows=7 required autofocus></textarea><br>
  <button class="btn btn-primary" type="submit">Submit</button>
  <a href="/notes" class="btn btn-secondary" title="Return">Return</a>
  </form>
    </h3>
  </div>
</div>
</div>
<% include ../partials/footer %>

